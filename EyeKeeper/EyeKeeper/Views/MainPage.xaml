<Controls:Page
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	mc:Ignorable="d"
	xmlns:local="clr-namespace:EyeKeeper" xmlns:Controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Navigation" x:Class="EyeKeeper.MainPage"
	d:DesignWidth="713" d:DesignHeight="366">
	
	<Grid x:Name="LayoutRoot" >
		<Image Source="{Binding MainPageViewModel.CurrentImgSource}" DataContext="{Binding Source={StaticResource Locator}}" Stretch="UniformToFill"/>
		<Rectangle Fill="Black" Stroke="Black" Opacity="0.7"/>
	</Grid>
</Controls:Page>
